{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "module": "es2015",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "esnext",
            "es2016",
            "es2015",
            "es5"
        ],
        "types": [
            "node"
        ],
        "strict": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "declaration": true,
        "sourceMap": true,
        "target": "ES6",
        "outDir": "dist/esm",
        "noEmit": false,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.svg",
        "src/components/Calendar/helpers.ts",
        "src/components/Calendar/index.ts",
        "src/components/Calendar/Day.tsx",
        "src/components/Calendar/Calendar.tsx",
        "src/components/Calendar/FeatureCarousel.tsx",
        "./custom.d.ts"
    ]
}