{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "esnext"],
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "dist",
    "noEmit": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "./dist/**/*"]
}

